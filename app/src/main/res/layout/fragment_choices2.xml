<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/questionHead_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#404040"
            android:text="2."
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/questionHead_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#404040"
            android:textStyle="bold"
            android:text="Updated all concerned departments on negotiations status of the venues and/or other channels"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/multiple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/ck1"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:text="Yes"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#404040"
            android:layout_marginLeft="10dp"
            android:theme="@style/MyRadioButton"/>

        <CheckBox
            android:id="@+id/ck2"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:text="No"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#404040"
            android:layout_marginLeft="10dp"
            android:theme="@style/MyRadioButton"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/choices1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="#404040"
            android:text="Details explained through Gantt Chart"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb1_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_marginBottom="10dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#404040"
                android:theme="@style/MyRadioButton"
                android:text="Yes"
                android:checked="false" />

            <RadioButton
                android:id="@+id/rb2_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_marginBottom="10dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#404040"
                android:theme="@style/MyRadioButton"
                android:text="No"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>
